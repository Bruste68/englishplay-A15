{
  "cli": {
    "version": ">=3.0.0",
    "appVersionSource": "local"
  },
  "build": {
    "preview": {
      "developmentClient": true,
      "distribution": "internal",
      "android": {
        "gradleCommand": ":app:assemblePlayDebug",   // ✅ flavor 지정
        "buildType": "apk"
      },
      "node": "22.16.0",
      "env": {
        "EXPO_FLAVOR": "playDebug",
        "EXPO_PUBLIC_BACKEND_URL": "https://samspeakgo.com/api",
        "EXPO_PUBLIC_WHISPER_URL": "https://samspeakgo.com/api/transcribe",
        "ENV": "development",
        "BUILD_ENV": "debug"
      }
    },
    "production": {
      "developmentClient": false,
      "distribution": "store",                // ✅ Google Play 업로드용
      "android": {
        "gradleCommand": ":app:bundlePlayRelease",   // ✅ flavor 지정
        "buildType": "app-bundle",
        "ndk": "25.1.8937393"
      },
      "node": "22.16.0",
      "env": {
        "EXPO_FLAVOR": "play",
        "EXPO_DEV_LAUNCHER_DISABLED": "true",
        "EXPO_DEV_MENU_DISABLED": "true",
        "EXPO_PUBLIC_BACKEND_URL": "https://samspeakgo.com/api",
        "EXPO_PUBLIC_WHISPER_URL": "https://samspeakgo.com/api/transcribe",
        "EXPO_ANDROID_MIN_SDK_VERSION": "24",
        "ENV": "production",
        "BUILD_ENV": "release"
      }
    }
  }
}
